#include<stdio.h>
#include<string.h>

int main(){

    char string[100000];               //create a string array of length 100000
    scanf("%s" , string);              //scanning string from user
    int l;
    int count=1;
    l = strlen(string);
    //getting length of the string by strlen
    int i = 0;
    while( i<l ){          //for loop to get compare ascii values
        if(string[i]<97){
            count++;
            i++;
        }
    }
    printf("%d" , count);              //printing the value of count
    

    return 0;
}
